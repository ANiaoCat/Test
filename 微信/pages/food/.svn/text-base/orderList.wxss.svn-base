/* pages/food/orderList.wxss */

page {
  height: 100%;
}

.content {
  height: 100%;
  display: flex;
  align-items: stretch;
  flex-direction: column;
}

.top {
  height: 91%;
  width: 100%;
  position: fixed;
}

.pay {
  position: fixed;
  width: 100%;
  bottom: 0;
  border-top: 1px solid #e5e5e5;
  font-size: 14px;
  height: 9%;
  align-items: stretch;
  display: flex;
  flex-direction: row;
}

.order-detail {
  background-color: white;
  margin-top: 30rpx;
  width: 100%;
}

.title {
  width: 100%;
  height: 104rpx;
  display: flex;
  align-items: center;
  color: #2f2f2f;
  font-size: 30rpx;
}

.order_img {
  margin-left: 48rpx;
  margin-right: 20rpx;
  width: 40rpx;
  height: 40rpx;
}

.detail {
  padding-bottom: 48rpx;
}

.cut-line {
  background-color: #d3d3d3;
  height: 1rpx;
  width: 702rpx;
  margin-left: 48rpx;
}

.line1 {
  margin-bottom: 25rpx;
}

.food_list {
  height: 60rpx;
  width: 100%;
  display: flex;
  flex-direction: row;
  align-items: center;
}

.line2 {
  margin-top: 25rpx;
  margin-bottom: 32rpx;
  /*height: 2rpx;*/
}

.name {
  margin-left: 48rpx;
  color: #2f2f2f;
  font-size: 26rpx;
  width: 440rpx;
}

.nums {
  width: 100rpx;
  color: #999;
  font-size: 26rpx;
  text-align: center;
}

.food-price {
  margin-left: 0rpx;
  margin-right: 46rpx;
  width: 122rpx;
  color: #2f2f2f;
  font-size: 26rpx;
  text-align: right;
}

.price {
  height: 50rpx;
  width: 100%;
  display: flex;
  flex-direction: row-reverse;
}

.price-name {
  width: 180rpx;
  margin-right: 0rpx;
  text-align: right;
  color: #2f2f2f;
  font-size: 26rpx;
}

.price-nums {
  width: 136rpx;
  margin-right: 44rpx;
  text-align: right;
  color: #2f2f2f;
  font-size: 26rpx;
}

.redColor {
  color: #e86050;
}

.order-note {
  margin-top: 30rpx;
  height: 211rpx;
  background-color: white;
}

.note {
  height: 105rpx;
  display: flex;
  align-items: center;
}

.note-img {
  width: 42rpx;
  height: 42rpx;
  margin-left: 48rpx;
  margin-right: 20rpx;
}

.note-title {
  width: 164rpx;
  text-align: left;
  font-size: 30rpx;
  color: #2f2f2f;
}

.note-input {
  width: 440rpx;
  font-size: 30rpx;
  color: #2f2f2f;
  height: 105rpx;
}

.placeholderStyle {
  color: RGB(220, 220, 220);
}

.voucher {
  margin-top: 30rpx;
  background-color: white;
  display: flex;
  flex-direction: column;
}

.voucher-name {
  height: 90rpx;
  line-height: 90rpx;
  margin-left: 48rpx;
  width: 654rpx;
  text-align: left;
  font-size: 30rpx;
  color: #2f2f2f;
  display: flex;
  flex-direction: row;
}

.voucher-title {
  width: 120rpx;
}

.voucher-number {
  width: 534rpx;
}

.voucher-content {
  height: 80rpx;
  line-height: 80rpx;
  margin-top: -50rpx;
  margin-left: 168rpx;
  width: 532rpx;
  text-align: left;
  font-size: 24rpx;
  color: RGB(220, 220, 220);
}

.blank {
  height: 30rpx;
}

.btn {
  width: 750rpx;
  font-size: 32rpx;
  text-align: center;
  line-height: 100rpx;
}

.useVoucher {
  color: #e86050;
  background-color: white;
}

.wPay {
  color: white;
  background-color: #e86050;
}

.drawer_screen {
  width: 100%;
  height: 100%;
  position: fixed;
  top: 0;
  left: 0;
  z-index: 1000;
  background: #000;
  opacity: 0.5;
  overflow: hidden;
}

/*content*/

.drawer_box {
  width: 650rpx;
  overflow: hidden;
  position: fixed;
  top: 50%;
  left: 0;
  z-index: 1001;
  background: #fafafa;
  margin: -150px 50rpx 0 50rpx;
  border-radius: 10rpx;
}

.drawer_title {
  padding: 10rpx;
  font: 20px "microsoft yahei";
  text-align: center;
}

.viewSelectVoucher {
  padding: 0rpx;
  font: 15px "microsoft yahei";
  text-align: center;
}

.drawer_content {
  height: 420rpx;
  overflow-y: scroll; /*超出父盒子高度可滚动*/
  align-items: center;
}

.btn_ok {
  padding: 10px;
  font: 20px "microsoft yahei";
  text-align: center;
  border-top: 1px solid #e8e8ea;
  color: #3cc51f;
}

.cell {
  padding-top: 20rpx;
}

.cell-title {
  height: 60rpx;
  width: 200rpx;
  text-align: center;
  font: 10 28rpx/30rpx "microsoft yahei";
}

.input_base {
  border: 2rpx solid #ccc;
  padding-left: 10rpx;
  margin-right: 50rpx;
}

.input_h30 {
  padding-left: 10rpx;
  height: 60rpx;
  float: left;
  line-height: 30px;
}

.input_h60 {
  height: 60px;
}

.input_view {
  font: 12px "microsoft yahei";
  background: #fff;
  color: #000;
  line-height: 30px;
}

input {
  font: 12px "microsoft yahei";
  background: #fff;
  color: #000;
}

radio {
  margin-right: 20px;
}

.grid {
  display: -webkit-box;
  display: box;
}

.col-0 {
  -webkit-box-flex: 0;
}

.col-1 {
  -webkit-box-flex: 1;
}

.fl {
  float: left;
}

.fr {
  float: right;
}
