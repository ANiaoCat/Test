<!--pages/food/paySucceed.wxml-->
<scroll-view class="content" scroll-y="true">
  <view class="payStstus">
    <image class="statusImg" src="../resouce/pay_succeed.png"></image>
    <text class="statusText">支付成功!</text>
  </view>

  <view class="order-content">
    <!--桌台信息-->
    <view class="content-infomation">
      <view class="inform">
        <view class="inform-title">订单号：</view>
        <view class="inform-content">234567890</view>
      </view>

      <view class="inform">
        <view class="inform-title">下单时间：</view>
        <view class="inform-content">了，看美剧那好吧GV付出的</view>
      </view>

      <view class="inform">
        <view class="inform-title">就餐人数：</view>
        <view class="inform-content">21222</view>
      </view>

    </view>
    <!--分割线-->
    <view class="cut-line line2"></view>
    <!--菜品信息-->
    <view class="food_list" wx:for="{{orderList}}" wx:for-item="orders">
      <text class="name">{{orders.foodName}}</text>
      <text class="nums">X{{orders.nums}}</text>
      <text class="food-price">￥{{orders.price}}</text>
    </view>
    <!--分割线-->
    <view class="cut-line line2"></view>
    <!--价格-->
    <view class="price">
      <text class="price-nums">￥300.00</text>
      <text class="price-name">原价：</text>
    </view>
    <view class="price">
      <text class="price-nums">￥15.00</text>
      <text class="price-name">优惠金额：</text>
    </view>
    <view class="price">
      <text class="price-nums redColor">￥270.00</text>
      <text class="price-name">实付金额：</text>
    </view>
  </view>
  <view class="btnView">
    <view wx:if="{{you}}">
      <view class="comeBack">
        <button class="come" bindtap="comeHome">返回首页</button>
      </view>
    </view>
    <view wx:else>
      <view class="continuePay">
        <button class="btn cancelPay" bindtap="payCancel">取消支付</button>
        <button class="btn surePay" bindtap="wPay">微信支付</button>
      </view>
    </view>


  </view>
</scroll-view>